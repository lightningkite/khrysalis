<?xml version="1.0" encoding="utf-8"?>
<selector
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:enterFadeDuration="150"
        android:exitFadeDuration="150">
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/border"/>
            <item android:drawable="@drawable/arrow_drop_down" android:gravity="center_vertical|right" android:right="8dp"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/border"/>
            <item android:drawable="@drawable/arrow_drop_down" android:gravity="center_vertical|right" android:right="8dp"/>
        </layer-list>
    </item>
</selector>
